<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="@dimen/dp_667"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_left"
    app:cardCornerRadius="@dimen/dp_8"
    app:cardBackgroundColor="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_marginTop="@dimen/dp_37"
            android:id="@+id/rl_title_left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/dp_70"
                android:layout_height="@dimen/dp_70"
                android:id="@+id/iv_header_left"
                android:layout_marginLeft="@dimen/dp_12"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:id="@+id/tv_name_left"
                android:text="林"
                android:maxLength="10"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="@dimen/sp_22"
                android:layout_toRightOf="@id/iv_header_left"
                android:layout_marginLeft="@dimen/dp_11"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_info_left"
                android:maxLength="15"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_below="@id/tv_name_left"
                android:layout_alignLeft="@id/tv_name_left"
                android:layout_marginTop="@dimen/dp_8"
                android:text="暂无"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/c_999"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_edit_left"
                android:textColor="@color/c_fa6a13"
                android:layout_below="@id/tv_info_left"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_21"
                android:layout_marginTop="@dimen/dp_5"
                android:textSize="@dimen/sp_14"
                android:text="编辑"/>

            <ImageView
                android:id="@+id/iv_edit_left"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:src="@mipmap/icon_me_bianji"
                android:layout_toLeftOf="@id/tv_edit_left"
                android:layout_below="@id/tv_info_left"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_5"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="@dimen/dp_288"
            android:layout_height="@dimen/dp_122"
            android:layout_below="@id/rl_title_left"
            android:id="@+id/rl_moneybag_left"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_btn_ff9d53_fa"
            android:layout_marginTop="@dimen/dp_37">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginLeft="@dimen/dp_10"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14"
                android:text="我的钱包"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_money_left"
                android:text="99"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_58"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_money_left"
                android:layout_marginLeft="@dimen/dp_3"
                android:layout_marginTop="@dimen/dp_64"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/white"
                android:text="元"/>

            <TextView
                android:id="@+id/tv_bonus_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_11"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/white"
                android:drawablePadding="@dimen/dp_6"
                android:drawableTint="@color/white"
                android:drawableRight="@mipmap/little_right_arrow"
                android:text="赢取奖金"/>

        </RelativeLayout>

        <android.support.v7.widget.CardView
            android:layout_width="@dimen/dp_288"
            android:layout_height="@dimen/dp_212"
            android:layout_below="@id/rl_moneybag_left"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/dp_8"
            app:cardElevation="@dimen/dp_3"
            android:layout_marginTop="@dimen/dp_19"
            android:layout_centerHorizontal="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_51"
                    android:id="@+id/rl_kaquan_left">

                    <ImageView
                        android:id="@+id/iv_kaquan_left"
                        android:layout_width="@dimen/dp_19"
                        android:layout_height="@dimen/dp_14"
                        android:src="@mipmap/icon_me_kaquan"
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_marginLeft="@dimen/dp_11" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_toRightOf="@id/iv_kaquan_left"
                        android:textColor="@color/c_333"
                        android:textSize="@dimen/sp_14"
                        android:layout_marginTop="@dimen/dp_17"
                        android:text="我的卡券"/>

                    <ImageView
                        android:layout_width="@dimen/dp_6"
                        android:layout_height="@dimen/dp_11"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_marginRight="@dimen/dp_12"
                        android:background="@mipmap/big_arrow_right"
                        android:backgroundTint="@color/c_333"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_2"
                    android:background="@color/c_f0f0f0"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_10"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_51"
                    android:id="@+id/rl_trip_left">

                    <ImageView
                        android:id="@+id/iv_trip_left"
                        android:layout_width="@dimen/dp_19"
                        android:layout_height="@dimen/dp_14"
                        android:src="@mipmap/icon_me_yigou"
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_marginLeft="@dimen/dp_11" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_toRightOf="@id/iv_trip_left"
                        android:textColor="@color/c_333"
                        android:textSize="@dimen/sp_14"
                        android:layout_marginTop="@dimen/dp_17"
                        android:text="已购旅程"/>

                    <ImageView
                        android:layout_width="@dimen/dp_6"
                        android:layout_height="@dimen/dp_11"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_marginRight="@dimen/dp_12"
                        android:background="@mipmap/big_arrow_right"
                        android:backgroundTint="@color/c_333"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_3"
                    android:background="@color/c_f0f0f0"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_10"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_51"
                    android:id="@+id/rl_like_left">

                    <ImageView
                        android:id="@+id/iv_like_left"
                        android:layout_width="@dimen/dp_19"
                        android:layout_height="@dimen/dp_14"
                        android:src="@mipmap/icon_me_shoucang"
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_marginLeft="@dimen/dp_11" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_toRightOf="@id/iv_like_left"
                        android:textColor="@color/c_333"
                        android:textSize="@dimen/sp_14"
                        android:layout_marginTop="@dimen/dp_17"
                        android:text="我的收藏"/>

                    <ImageView
                        android:layout_width="@dimen/dp_6"
                        android:layout_height="@dimen/dp_11"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_marginRight="@dimen/dp_12"
                        android:background="@mipmap/big_arrow_right"
                        android:backgroundTint="@color/c_333"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_2"
                    android:background="@color/c_f0f0f0"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_10"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_51"
                    android:id="@+id/rl_follow_left">

                    <ImageView
                        android:id="@+id/iv_follow_left"
                        android:layout_width="@dimen/dp_19"
                        android:layout_height="@dimen/dp_14"
                        android:src="@mipmap/icon_me_guanzhu"
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_marginLeft="@dimen/dp_11" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_toRightOf="@id/iv_follow_left"
                        android:textColor="@color/c_333"
                        android:textSize="@dimen/sp_14"
                        android:layout_marginTop="@dimen/dp_17"
                        android:text="我的关注"/>

                    <ImageView
                        android:layout_width="@dimen/dp_6"
                        android:layout_height="@dimen/dp_11"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_marginRight="@dimen/dp_12"
                        android:background="@mipmap/big_arrow_right"
                        android:backgroundTint="@color/c_333"/>

                </RelativeLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/tv_service_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_28"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_12"
            android:drawableLeft="@mipmap/icon_me_kefu"
            android:text="联系客服"
            android:textColor="@color/c_333"
            android:textSize="@dimen/sp_12"
            android:drawablePadding="@dimen/dp_7"/>

        <TextView
            android:id="@+id/tv_idea_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_28"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_123"
            android:drawableLeft="@mipmap/icon_me_fankui"
            android:text="意见反馈"
            android:textColor="@color/c_333"
            android:textSize="@dimen/sp_12"
            android:drawablePadding="@dimen/dp_7"/>

        <TextView
            android:id="@+id/tv_version_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_28"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_225"
            android:drawableLeft="@mipmap/icon_me_banben"
            android:text="版本检测"
            android:textColor="@color/c_333"
            android:textSize="@dimen/sp_12"
            android:drawablePadding="@dimen/dp_7"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>
