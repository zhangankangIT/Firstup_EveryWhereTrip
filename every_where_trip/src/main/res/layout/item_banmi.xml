<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_335"
    android:layout_height="@dimen/dp_120"
    android:background="@color/transparent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="@dimen/dp_10"
        app:cardCornerRadius="@dimen/dp_6"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_gravity="center_horizontal">

        <RelativeLayout
            android:layout_width="@dimen/dp_335"
            android:layout_height="@dimen/dp_120">
            
            <ImageView
                android:id="@+id/img"
                android:layout_width="@dimen/dp_120"
                android:layout_height="match_parent"
                android:scaleType="fitXY"/>

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_17"
                android:layout_marginLeft="@dimen/dp_17"
                android:layout_toRightOf="@id/img"
                android:textSize="@dimen/sp_22"
                android:textColor="@color/c_333"
                android:text="杨晨"/>

            <TextView
                android:id="@+id/tv_following"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="248人关注"
                android:textColor="@color/c_999"
                android:textSize="@dimen/dp_12"
                android:layout_below="@id/tv_name"
                android:layout_alignLeft="@id/tv_name"/>
            
            <ImageView
                android:layout_marginTop="@dimen/dp_71"
                android:layout_marginLeft="@dimen/dp_139"
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_12"
                android:src="@mipmap/location"/>

            <TextView
                android:id="@+id/tv_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="东京"
                android:textColor="@color/c_999"
                android:textSize="@dimen/sp_12"
                android:layout_marginTop="@dimen/dp_69"
                android:layout_marginLeft="@dimen/dp_156"/>

            <ImageView
                android:layout_width="@dimen/dp_11_5"
                android:layout_height="@dimen/dp_14"
                android:src="@mipmap/comment"
                android:layout_marginTop="@dimen/dp_92"
                android:layout_marginLeft="@dimen/dp_138"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="日本国家旅游局专栏作者"
                android:textColor="@color/c_999"
                android:layout_marginLeft="@dimen/dp_155"
                android:layout_marginTop="@dimen/dp_90"
                android:textSize="@dimen/sp_12"
                android:id="@+id/tv_occupation"/>
            
            <ImageView
                android:id="@+id/iv_follow"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_18"
                android:layout_marginLeft="@dimen/dp_305"
                android:layout_marginTop="@dimen/dp_18"
                android:src="@mipmap/follow_unselected"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
