<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/ll_parent"
    android:fitsSystemWindows="true"
    tools:context="com.everywhere.trip.ui.my.activity.UpdateInfoActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/dp_4">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:id="@+id/toolBar">

            <TextView
                android:id="@+id/tb_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/c_333"
                android:text="个人信息"/>

            <TextView
                android:id="@+id/tb_finished"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:text="完成"
                android:textColor="@color/c_fa6a13"
                android:textSize="@dimen/sp_14"
                android:layout_marginRight="@dimen/dp_10"/>

            <ImageView
                android:id="@+id/iv_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:background="@mipmap/icon_me_ziliao"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="@dimen/dp_10"/>

        </android.support.v7.widget.Toolbar>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_info"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_130"
        app:cardBackgroundColor="@color/c_f0f0f0"
        app:cardCornerRadius="@dimen/dp_6"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="27"
                android:maxLines="3"
                android:id="@+id/et_info"
                android:layout_marginLeft="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_14"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/c_999"
                android:text="伴小米"
                android:background="@color/transparent"/>

            <TextView
                android:id="@+id/text_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/dp_17"
                android:layout_marginRight="@dimen/dp_12"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/c_999"
                android:text="3/27"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <ImageView
        android:id="@+id/iv_big_header"
        android:background="@color/c_f0f0f0"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_250"
        android:visibility="gone"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_100"
        android:src="@mipmap/zhanweitu_touxiang"/>

</LinearLayout>
