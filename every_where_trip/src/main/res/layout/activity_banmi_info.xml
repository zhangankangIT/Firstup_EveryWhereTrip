<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.everywhere.trip.ui.main.activity.BanmiInfoActivity">

    <LinearLayout
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="@dimen/dp_4">

            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:id="@+id/toolBar"
                android:background="@color/white">

                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/c_333"
                    android:text="伴米详情"/>

                <ImageView
                    android:id="@+id/iv_share"
                    android:layout_width="@dimen/dp_25"
                    android:layout_height="@dimen/dp_25"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="@dimen/dp_20"
                    android:src="@mipmap/share" />

            </android.support.v7.widget.Toolbar>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_20"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/dp_6"
            app:cardElevation="@dimen/dp_2">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:src="@mipmap/zhanweitu_touxiang"
                    android:id="@+id/img"
                    android:layout_width="@dimen/dp_120"
                    android:layout_height="@dimen/dp_160"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_15"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/iv_follow"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_18"
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_19"
                    android:src="@mipmap/follow_unselected"
                    android:layout_alignParentRight="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_follow"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_19"
                    android:layout_marginTop="@dimen/dp_6"
                    android:text="关注"
                    android:textSize="@dimen/sp_10"
                    android:textColor="@color/c_999"/>

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/img"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_toRightOf="@id/img"
                    android:text="杨晨"
                    android:textColor="@color/c_333"
                    android:textSize="@dimen/sp_22" />

                <TextView
                    android:id="@+id/tv_like_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/tv_name"
                    android:layout_below="@id/tv_name"
                    android:layout_marginTop="@dimen/dp_6"
                    android:text="2163人关注"
                    android:textColor="@color/c_999"
                    android:textSize="@dimen/sp_12" />

                <ImageView
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="@dimen/dp_12"
                    android:layout_alignLeft="@id/tv_like_count"
                    android:layout_below="@id/tv_like_count"
                    android:layout_marginTop="@dimen/dp_73"
                    android:src="@mipmap/location" />

                <TextView
                    android:id="@+id/tv_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/tv_like_count"
                    android:layout_below="@id/tv_like_count"
                    android:layout_marginLeft="@dimen/dp_17"
                    android:layout_marginTop="@dimen/dp_71"
                    android:text="东京"
                    android:textColor="@color/c_999"
                    android:textSize="@dimen/sp_12" />

                <ImageView
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="@dimen/dp_12"
                    android:layout_alignLeft="@id/tv_like_count"
                    android:layout_below="@id/tv_like_count"
                    android:layout_marginTop="@dimen/dp_94"
                    android:src="@mipmap/message" />

                <TextView
                    android:id="@+id/tv_occupation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/tv_like_count"
                    android:layout_below="@id/tv_like_count"
                    android:layout_marginLeft="@dimen/dp_17"
                    android:layout_marginTop="@dimen/dp_92"
                    android:text="日本国家旅游局专栏作者"
                    android:textColor="@color/c_999"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/tv_intro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img"
                    android:layout_marginBottom="@dimen/dp_22"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_15"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/c_666"
                    android:text="简介：我是杨晨，日本国家旅游局专栏作者。" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>
        
        <android.support.design.widget.TabLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_27"
            android:layout_gravity="center_horizontal"
            android:id="@+id/tab"
            app:tabTextColor="@color/c_999"
            app:tabSelectedTextColor="@color/c_373737"
            app:tabIndicatorColor="@color/c_fa6a13"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fragment_container"
            android:layout_marginTop="@dimen/dp_37"/>
        
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
